<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kh.finalproject.dao.MemberDAO">
	<select id="selectMember" resultType="kr.kh.finalproject.vo.MemberVO">
		select * from member where me_oi_id = #{id}
	</select>
	<update id="updateMemberSession">
		update
			member
		set
			me_session_id = #{member.me_session_id},
			me_session_limit = #{member.me_session_limit}
		where
			me_id = #{member.me_id}
	</update>
</mapper>