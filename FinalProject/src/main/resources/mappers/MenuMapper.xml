<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kh.finalproject.dao.MenuDAO">
	
	<!-- 메뉴 대분류에 맞는 중분류이름 -->
	<select id="selectMenuList" resultType="kr.kh.finalproject.vo.MCategoryVO">
		select mc_name from medium_category join large_category on mc_lc_num = lc_num
		where lc_name = #{category};
	</select>
	<!-- 메뉴 중분류에 맞는 메뉴 정보 -->
	<select id="selectMainList" resultType="kr.kh.finalproject.vo.MenuVO">
		 select * from menu 
		 	<if test="mc_list != null and mc_list.length != 0">
		 	where mn_mc_num in 
		 		<foreach collection="mc_list" item="mc_num" open="(" close=")" separator=",">
		 			#{mc_num}
		 		</foreach>
		 	</if>
		 	 
	</select>
</mapper>


